<p> <%= @driver.name %>, VIN: <%= @driver.vin%></p>
<section class="details">
  <h3>Total Earnings $<%=(@driver.earnings / 100).round(2)%></h3>
  <h3>Average Rating: <%=@driver.average_rating.round(1)%></h3>
<h4>List of trips:</h4>
  <p><% @driver.list_driver_trips.each do |trip| %>
    <ul>
      <li>Trip id: <%=trip.id%>, Date: <%=trip.date%>, Rating: <%=trip.rating%>, Cost: $<%=(trip.cost/100).round(2)%>, Passenger id: <%=trip.passenger_id%>
      <%= link_to "View Trip", trip_path(trip.id)%>
      </li>
    </ul>
    <% end%>
  </p>  
</section>


<%= link_to "Edit Driver", edit_driver_path(@driver.id), method: :get %>
<%= link_to "Delete Driver", 
    driver_path(@driver.id), method: :delete %>

